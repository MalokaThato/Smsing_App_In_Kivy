<contacts_screen>:

    BoxLayout:

        orientation: "vertical"

        canvas.before:
            Color:
                rgba: .2,.5,.5,1

            Rectangle:
                pos:self.pos
                size: self.size

        ActionBar:
            background_color: (1,1,1,1)
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Home'
                    with_previous: True
                    on_press: root.to_home()
                ActionOverflow:

                ActionButton:
                    icon: "icons/sending_icon.png"
                    important: True
                    #text: 'Sent'
                ActionButton:
                    icon: "icons/recieved_mail2.png"
                    #text: 'Recieved'

                #

        Label:
            text: "Contacts Screen"
