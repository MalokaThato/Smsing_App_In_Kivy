<received_screen>:

    BoxLayout:

        orientation: "vertical"

        canvas.before:
            Color:
                rgba: .2,.5,.5,1

            Rectangle:
                pos:self.pos
                size: self.size

        ActionBar:

            canvas.before:
                Color:
                    rgba: .2,.5,.5,1

                Rectangle:
                    pos:self.pos
                    size: self.size


            background_color: (1,1,1,1)
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Home'
                    with_previous: True
                    on_press: root.to_home()
                ActionOverflow:


                ActionButton:
                    icon: "icons/recieved_mail2.png"
                    text: 'Recieved'

                ActionButton:
                    icon: "icons/contacts_icon2.png"
                    text: 'Contacts'

        BoxLayout:
            size_hint_y: .1
            pos_hint: {"top":1}

            TextInput:
                
            Button:
                size_hint_x: .05


                StackLayout:

                    canvas.before:
                        Color:
                            rgba: 1,1,1,1

                        Rectangle:
                            pos:self.pos
                            size: self.size

                    #background_color: (1,1,1,1)
                    pos: self.parent.pos
                    size: self.parent.size
                    orientation: 'lr-tb'
                    Image:
                        source: 'icons/search.png'
                        #size_hint_x: None
                        #width: 74





        Label:
            text: "Received Messages Screen"
